<div class="col-xs-12">
  <% flash.each do |type, msg| %>
    <% if msg.is_a?(String) %>
      <div class="alert alert-message alert-<%= type == :notice ? "success" : "danger" %>">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= msg %>
      </div>
    <% end %>
  <% end %>
</div>
