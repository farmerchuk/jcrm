<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= user.search_display_name %></h3>
  </div>
  <div class="panel-body">
    <%= form_for user do |f| %>
      <div class="row">
        <div class="form-group col-md-6">
          <%= f.label :first_name, "First Name" %>
          <%= f.text_field :first_name, class: "form-control", disabled: true %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :last_name, "Last Name" %>
          <%= f.text_field :last_name, class: "form-control", disabled: true %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-6">
          <%= f.label :email, "Email" %>
          <%= f.text_field :email, class: "form-control", disabled: true %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :phone_number, "Phone Number" %>
          <%= f.text_field :phone_number, class: "form-control", disabled: true %>
        </div>
      </div>
    <% end %>
    <hr/>
    <% if @record_type != Note && current_user.is_admin? %>
      <%= link_to "Unlink User", unlink_user_path(user, record_type: @record_type, record_id: @record_id), method: :post, class: "btn btn-default pull-left" %>
    <% end %>
    <%= link_to "View User", user_path(user), class: "btn btn-default pull-right" %>
  </div>
</div>
