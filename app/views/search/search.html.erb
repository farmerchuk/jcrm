<div class="col-md-2">
  <h4>Search results ...</h4>
</div>

<div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Accounts</h3>
      </div>
      <div class="panel-body">
        <% @accounts.each do |account| %>
          <%= link_to account.search_display_name, account_path(account), class: "btn btn-block btn-default" %>
        <% end %>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Contacts</h3>
      </div>
      <div class="panel-body">
        <% @contacts.each do |contact| %>
          <%= link_to "#{contact.search_display_name} (#{contact.email})", contact_path(contact), class: "btn btn-block btn-default" %>
        <% end %>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Opportunities</h3>
      </div>
      <div class="panel-body">
        <% @opportunities.each do |opportunity| %>
          <%= link_to opportunity.search_display_name, opportunity_path(opportunity), class: "btn btn-block btn-default" %>
        <% end %>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Notes</h3>
      </div>
      <div class="panel-body">
        <% @notes.each do |note| %>
          <%= link_to note.search_display_name, note_path(note), class: "btn btn-block btn-default" %>
        <% end %>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Users</h3>
      </div>
      <div class="panel-body">
        <% @users.each do |user| %>
          <%= link_to "#{user.search_display_name} (#{user.email})", user_path(user), class: "btn btn-block btn-default" %>
        <% end %>
      </div>
    </div>
</div>
