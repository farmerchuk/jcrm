<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= account.search_display_name %></h3>
  </div>
  <div class="panel-body">
    <%= form_for account do |f| %>
      <div class="row">
        <div class="form-group col-xs-8">
          <%= f.label :name, "Account Name" %>
          <%= f.text_field :name, class: "form-control", disabled: true %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-xs-6">
          <%= f.label :street, "Street Address" %>
          <%= f.text_field :street, class: "form-control", disabled: true %>
        </div>
        <div class="form-group col-xs-6">
          <%= f.label :city, "City" %>
          <%= f.text_field :city, class: "form-control", disabled: true %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-xs-4">
          <%= f.label :region, "State/Province" %>
          <%= f.text_field :region, class: "form-control", disabled: true %>
        </div>
        <div class="form-group col-xs-3">
          <%= f.label :postal_code, "Postal/Zip Code" %>
          <%= f.text_field :postal_code, class: "form-control", disabled: true %>
        </div>
        <div class="form-group col-xs-5">
          <%= f.label :country, "Country" %>
          <%= f.text_field :country, class: "form-control", disabled: true %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-xs-6">
          <%= f.label :industry_id, "Industry" %>
          <%= f.select :industry_id, Industry.all.collect { |p| [ p.name, p.id ] }, {}, { class: "form-control", disabled: true } %>
        </div>
        <div class="form-group col-xs-6">
          <%= f.label :website, "Website" %>
          <%= f.text_field :website, class: "form-control", disabled: true %>
        </div>
      </div>
    <% end %>
    <hr/>
    <% if current_user.is_admin? %>
      <%= link_to "Unlink Account", unlink_account_path(account, record_type: @record_type, record_id: @record_id), method: :post, class: "btn btn-default pull-left" %>
    <% end %>
    <%= link_to "View Account", account_path(account), class: "btn btn-default pull-right" %>
  </div>
</div>
