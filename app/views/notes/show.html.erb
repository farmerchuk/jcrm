<div class="col-md-8">
  <%= render "shared/errors", record: @note %>
  <%= render "notes/form", record_heading: "Note: #{@note.search_display_name}" %>
</div>

<div class="col-md-4">
  <%= render "shared/link_records" %>
</div>

<div class="col-md-8">
  <ul class="nav nav-tabs">
    <li role="presentation" class="<%= 'active' if @tab == 'accounts' || @tab == nil %>">
      <%= link_to "Accounts", note_path(@note, tab: "accounts") %>
    </li>
    <li role="presentation" class="<%= 'active' if @tab == 'contacts' %>">
      <%= link_to "Contacts", note_path(@note, tab: "contacts") %>
    </li>
    <li role="presentation" class="<%= 'active' if @tab == 'opportunities' %>">
      <%= link_to "Opportunities", note_path(@note, tab: "opportunities") %>
    </li>
  </ul>
  <br/>

  <% if params[:tab] == "accounts" || params[:tab] == nil %>
    <% @accounts.each do |account| %>
      <%= render "accounts/short_form", account: account %>
    <% end %>
  <% elsif params[:tab] == "contacts" %>
    <% @contacts.each do |contact| %>
      <%= render "contacts/short_form", contact: contact %>
    <% end %>
  <% else params[:tab] == "notes" %>
    <% @opportunities.each do |opportunity| %>
      <%= render "opportunities/short_form", opportunity: opportunity %>
    <% end %>
  <% end %>

</div>
