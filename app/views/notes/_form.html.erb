<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= record_heading %></h3>
  </div>
  <div class="panel-body">
    <%= form_for @note do |f| %>
      <div class="row">
        <div class="form-group col-xs-6">
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <% if ! @note.new_record? %>
          <div class="form-group col-xs-3" id="disabledInput">
            <%= f.label :created_at, "Created" %>
            <%= f.text_field :created_at, class: "form-control", disabled: true %>
          </div>
          <div class="form-group col-xs-3">
            <%= f.label :updated_at, "Last Updated" %>
            <%= f.text_field :updated_at, class: "form-control", disabled: true %>
          </div>
        <% end %>
      </div>
      <div class="row">
        <div class="form-group col-xs-12">
          <%= f.label :body, "Text" %>
          <%= f.text_area :body, class: "form-control", rows: "12" %>
        </div>
      </div>
      <hr/>
      <%= f.submit @note.new_record? ? "Create Note" : "Update Note", class: "btn btn-primary pull-right" %>
    <% end %>
  </div>
</div>
