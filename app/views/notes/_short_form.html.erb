<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= note.search_display_name %></h3>
  </div>
  <div class="panel-body">
    <%= form_for note do |f| %>
      <div class="row">
        <div class="form-group col-md-6">
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: "form-control", disabled: true %>
        </div>
        <div class="form-group col-md-3" id="disabledInput">
          <%= f.label :created_at, "Created" %>
          <%= f.text_field :created_at, class: "form-control", disabled: true %>
        </div>
        <div class="form-group col-md-3">
          <%= f.label :updated_at, "Last Updated" %>
          <%= f.text_field :updated_at, class: "form-control", disabled: true %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-12">
          <%= f.label :body, "Text" %>
          <%= f.text_area :body, class: "form-control", rows: "12", disabled: true %>
        </div>
      </div>
    <% end %>
    <hr/>
    <%= link_to "View Note", note_path(note), class: "btn btn-default pull-right" %>
  </div>
</div>
